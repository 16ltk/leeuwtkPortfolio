<% include ../partials/header %>


    <div class="row">
        <legend id="brilliant-legends">Edit <%= project.name %></legend>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/devprojects/<%= project._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="projectName">Project Name</label>
                    <input class="form-control" type="text" name="project[name]"value="<%= project.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="project[image]" value="<%= project.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="project[description]" value="<%= project.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <a href="/devprojects">Go Back</a>

<% include ../partials/footer %>