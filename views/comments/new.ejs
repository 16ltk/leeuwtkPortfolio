<% include ../partials/header %>


    <div class="row">
        <legend id="brilliant-legends">Add New Comment to <%= project.name %></legend>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/devprojects/<%= project._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="addComment">Add Comment</label>
                    <input class="form-control" type="text" name="comment[text]" placeholder="your comments">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <a href="/devprojects">Go Back</a>
    
<% include ../partials/footer %>
