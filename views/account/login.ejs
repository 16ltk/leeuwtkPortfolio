<% include ../partials/header %>

<div class="row">
    <div class="col-lg-12 col-md-6 col-sm-4">
        <form action="/login" method="post">
            <legend id="brilliant-legends">Login</legend>
            <div class="form-group">
                <label for="location">Username</label>
                <input class="form-control" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <label for="location">Password</label>
                <input class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group col-md-4">
                <button class="btn btn-md btn-success btn-block">Login</button>
            </div>
        </form>
        <form action="/forgot">
            <div class="form-group col-md-4">
                <button class="btn btn-md btn-warning btn-block">Forgot Password</button>
            </div>
        </form>
        <form action="/signup">
            <div class="form-group col-md-6">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
    </div>
</div>
